<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartMedicationManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nord_night_dark</item>
        <item name="colorPrimaryVariant">@color/nord_night_clear</item>
        <item name="colorOnPrimary">@color/nord_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nord_night_dark</item>
        <item name="colorSecondaryVariant">@color/nord_night_clear</item>
        <item name="colorOnSecondary">@color/nord_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SmartMedicationManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textProperties" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/nord_night_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textTitleProperties" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/nord_night_dark</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Theme.SmartMedicationManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmartMedicationManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>