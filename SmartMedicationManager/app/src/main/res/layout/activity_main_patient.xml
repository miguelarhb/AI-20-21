<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/nord_white">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_below="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcome"
            android:background="@color/nord_dark_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/welcome"
            android:textSize="24sp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/welcome"
            android:layout_marginTop="60dp">

            <ImageButton
                android:id="@+id/buttonSchedule"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:elevation="5dp"
                app:srcCompat="@android:drawable/ic_menu_agenda"
                android:background="@color/nord_blue_light"/>

            <TextView
                android:id="@+id/txtSchedule"
                android:text="@string/schedule"
                style="@style/textProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonSchedule"
                android:layout_alignEnd="@+id/buttonSchedule"
                android:layout_alignStart="@+id/buttonSchedule"
                android:gravity="center_horizontal"
                />

            <ImageButton
                android:id="@+id/buttonHelp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:elevation="5dp"
                app:srcCompat="@android:drawable/stat_sys_phone_call"
                android:background="@color/nord_red"
                android:layout_toEndOf="@id/buttonSchedule"/>

            <TextView
                android:id="@+id/txtHelp"
                android:text="@string/help"
                style="@style/textProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonHelp"
                android:layout_alignEnd="@+id/buttonHelp"
                android:layout_alignStart="@+id/buttonHelp"
                android:gravity="center_horizontal"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>